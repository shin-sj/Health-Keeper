<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--    상단 툴바-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/logo_header3"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#82B3ED"
            android:gravity="center_horizontal"
            android:text="진료기록"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/image_add"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@mipmap/img_gray" />
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="카메라"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#82B3ED"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="병원명" />

        <EditText
            android:id="@+id/etHospital"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:backgroundTint = "#82B3ED"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="날짜" />

        <EditText
            android:id="@+id/etDate"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:backgroundTint = "#82B3ED"/>

        <ImageButton
            android:id="@+id/btn_cal2"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginStart="-35dp"
            android:layout_marginLeft="-35dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="onCalClick"
            android:scaleType="centerInside"
            android:src="@drawable/cal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView10"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="증상" />

        <EditText
            android:id="@+id/etSymptom"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:backgroundTint = "#82B3ED"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">
            >

        <TextView
            android:id="@+id/textView11"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="진단" />

        <EditText
            android:id="@+id/etContents"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:backgroundTint = "#82B3ED"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_insert"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radius"
                android:onClick="onClick"
                android:layout_marginRight="5dp"
                android:text="등록"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_cancel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="취소"
                android:textColor="#ffffff"
                android:background="@drawable/radius3"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>